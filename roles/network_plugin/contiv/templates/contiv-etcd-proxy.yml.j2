kind: DaemonSet
apiVersion: extensions/v1beta1
metadata:
  name: contiv-etcd-proxy
  namespace: {{ system_namespace }}
  labels:
    k8s-app: contiv-etcd-proxy
spec:
  selector:
    matchLabels:
      k8s-app: contiv-etcd-proxy
  template:
    metadata:
      labels:
        k8s-app: contiv-etcd-proxy
      annotations:
        scheduler.alpha.kubernetes.io/critical-pod: ''
    spec:
      hostNetwork: true
      hostPID: true
      containers:
        - name: contiv-etcd-proxy
          image: {{ etcd_image_repo }}:{{ etcd_image_tag }}
          env:
            - name: ETCD_PROXY
              value: "on"
            - name: ETCD_LISTEN_CLIENT_URLS
              value: http://127.0.0.1:6666
            - name: ETCD_INITIAL_CLUSTER
              value: {{ etcd_peer_addresses }}
            - name: ETCD_PEER_TRUSTED_CA_FILE
              value: /etc/contiv/certs/ca_cert.crt
            - name: ETCD_PEER_CERT_FILE
              value: /etc/contiv/certs/proxy-cert.crt
            - name: ETCD_PEER_KEY_FILE
              value: /etc/contiv/certs/proxy-key.pem
            - name: ETCD_PEER_CLIENT_CERT_AUTH
              value: "true"
          securityContext:
            privileged: true
          volumeMounts:
            - mountPath: /etc/contiv/certs
              name: etc-contiv-certs
              readOnly: false
      volumes:
        - name: etc-contiv-certs
          hostPath:
            path: /etc/contiv/certs
