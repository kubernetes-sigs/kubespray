#cloud-config

users:
  - default
  - name: ubuntu
    shell: /bin/bash
    sudo: "ALL=(ALL) NOPASSWD:ALL"
    ssh_authorized_keys:
    %{ for ssh_public_key in ssh_public_keys ~}
      - ${ssh_public_key}
    %{ endfor ~}

ssh_authorized_keys:
%{ for ssh_public_key in ssh_public_keys ~}
  - ${ssh_public_key}
%{ endfor ~}
